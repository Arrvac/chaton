<div class="jumbotron color-grey-light mt-70" style="padding:0;">
    <div class="d-flex align-items-center h-100">
        <div class="container text-center py-5">
          <h3 class="mb-0">User profile</h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
    <% if @user.orders.all.first == nil %>
    <div class="col">
        <div class="jumbotron mt-70" style="padding:0;">
            <div class="d-flex align-items-center h-100">
                <div class="container text-center py-5">
                <h3 class="mb-0">Vous n'avez jamais effectuez de commande.</h3>
                <p class="mb-0">Vos futures commandes s'afficheront ici</p>
                </div>
            </div>
        </div>
    </div>
    <% else %>
        <h1> Past Order : </h1>
        <% @user.orders.reverse_each do |order|%>
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    </tr>
                </thead>
                <% order.item.each do |item_select|%>
                    <tbody>
                        <tr>
                            <td><%= image_tag item_select.avatar, class: "card-img-top", style:"width: 50px" %></td>
                            <td><%= link_to item_select.title, item_path(item_select.id) %></td>
                            <td><%= item_select.description %></td>
                            <td><%= item_select.price %></td>
                        </tr>
                    </tbody>
                <% end%>
            </table>
        <% end%>
    <% end %>
    </div>
</div>
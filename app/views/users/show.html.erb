<div class="jumbotron color-grey-light mt-70" style="padding:0;">
    <div class="d-flex align-items-center h-100">
        <div class="container text-center py-5">
          <h3 class="mb-0">User profile</h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <% @user.orders.each do |order|%>
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    </tr>
                </thead>
                <% order.item.each do |item_select|%>
                    <tbody>
                        <tr>
                            <td><img src="<%=item_select.image_url%>" class="img-radius" alt="User-Profile-Image" style="width: 50px"></td>
                            <td><%= item_select.title %></td>
                            <td><%= item_select.description %></td>
                            <td><%= item_select.price %></td>
                        </tr>
                    </tbody>
                <% end%>
            </table>
        <% end%>
    </div>
</div>